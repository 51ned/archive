#!/bin/bash

docker build \
-t $IMAGE_NAME \
--build-arg CONTENTFUL_ACCESS_ID=$CONTENTFUL_ACCESS_ID \
--build-arg CONTENTFUL_SPACE_ID=$CONTENTFUL_SPACE_ID \
--build-arg EMAIL_HOST=$EMAIL_HOST \
--build-arg EMAIL_PASS=$EMAIL_PASS \
--build-arg EMAIL_PORT=$EMAIL_PORT \
--build-arg EMAIL_RECIPIENT=$EMAIL_RECIPIENT \
--build-arg EMAIL_USER=$EMAIL_USER .